{
  "compilerOptions": {
    "rootDir": "./main",
    "outDir": "./out",
    "target": "es5",
    "noEmit": false,
    "skipLibCheck": true,
    "allowSyntheticDefaultImports": true,
    "baseUrl": ".",
    "paths": {
      "~/*": [
        "./src/*"
      ],
      "@main/*": [
        "./main/*"
      ]
    }
  },
  "include": [
    "./main/**/*"
  ]
}